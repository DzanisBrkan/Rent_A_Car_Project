<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:vm="clr-namespace:Rent_A_Car.MobileAPP.ViewModels"
             mc:Ignorable="d"
             x:Class="Rent_A_Car.MobileAPP.Views.LoginPage">


    <ContentPage.BindingContext>
        <vm:LoginViewModel />
    </ContentPage.BindingContext> 

    <ContentPage.Content>
        <StackLayout Padding="35"
                     VerticalOptions="CenterAndExpand"
                     HorizontalOptions="FillAndExpand">
            
            <Label Text="Welcome to Rent A Car!" 
                  VerticalOptions="Center"
                  HorizontalOptions="Center" />


            <Label Text="Username:" />
            <Entry Text="{Binding Username}"></Entry>
            
            <Label Text="Password:" />
            <Entry Text="{Binding Password}"></Entry>

            <!--skadakdsak-->
            
            <Button Command="{Binding LoginCommand}" Text="Login"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>