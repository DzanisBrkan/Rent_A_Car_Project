    <ContentPage.Content>
        <StackLayout>
            <Label Text="SEARCHHHH!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <SearchBar Placeholder="Search..."
                       Text="{Binding SearchTerm}"
                       SearchCommand="{Binding SearchTerm}"
                       ></SearchBar>


            <!--<Picker ItemsSource="{Binding TipList}" SelectedItem="{Binding SelectedTipVozila}" ItemDisplayBinding="{Binding Naziv}"></Picker>-->
            <!--ovdje povezujemo nasu listu sa njenim propertijima-->
            <ListView ItemsSource="{Binding VoziloList}" ItemSelected="ListView_ItemSelected" IsPullToRefreshEnabled="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10" Orientation="Horizontal">

                                <StackLayout>
                                    <controls:CircleImage WidthRequest="150" HeightRequest="150"  Source="{Binding SlikaThumb, Converter={StaticResource imgConv}}"></controls:CircleImage>
                                    <!--<Image WidthRequest="150" Source="{Binding SlikaThumb, Converter={StaticResource imgConv}}"></Image>-->
                                </StackLayout>

                                <StackLayout Orientation="Vertical">
                                    <Label Text="{Binding RegistracijskiBroj}"
                                       LineBreakMode="NoWrap"
                                       Style="{DynamicResource ListItemTextStyle}"
                                       FontSize="16"/>
                                    <Label Text="{Binding Model}"
                                       LineBreakMode="NoWrap"
                                       Style="{DynamicResource ListItemDetailTextStyle}"
                                       FontSize="13"/>

                                    <Label Text="{Binding Marka}"
                                       LineBreakMode="NoWrap"
                                       Style="{DynamicResource ListItemDetailTextStyle}"
                                       FontSize="13"/>
                                    <Label Text="{Binding CijenaPoSatu}"
                                       LineBreakMode="NoWrap"
                                       Style="{DynamicResource ListItemDetailTextStyle}"
                                       FontSize="13"/>
                                </StackLayout>

                                
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


        </StackLayout>
    </ContentPage.Content>
